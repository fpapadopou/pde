<!-- Modal used when renaming a file -->
<div class="modal fade" id="file-rename-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Rename file <i><span id="rename-file-placeholder"></span></i></h4>
            </div>
            <div class="modal-body">
                <input style="width: 60%;" type="text" id="file-rename-modal-input" class="form-control" placeholder="new file name">
            </div>
            <div class="modal-footer">
                <button type="submit" id="file-rename-modal-btn" class="btn btn-success btn-small">
                    <i class="fa fa-pencil"></i> Rename file
                </button>
                &nbsp;
                <button class="btn btn-default btn-small" data-dismiss="modal">Cancel</button>
            </div>
        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div><!-- modal -->